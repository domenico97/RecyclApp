<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/nomeApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="RecyclApp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/nomeApp"
        android:layout_marginTop="10dp">

        <android.support.v7.widget.CardView

            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="ModificaCalendario"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/person_photo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/calendar_modifica" />

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/person_photo"
                    android:text="Modifica calendario"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_below="@id/frame1"
        android:layout_marginBottom="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="statistiche"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/person_photo1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/pie_chart" />

                <TextView
                    android:id="@+id/person_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@+id/person_photo1"
                    android:text="Statistiche"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/nomeApp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        android:layout_toRightOf="@id/frame1">

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="inviaSanzione"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/person_photo3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/sending" />

                <TextView
                    android:id="@+id/person_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/person_photo3"
                    android:text="Invia sanzione"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/frame3"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/frame2">

        <android.support.v7.widget.CardView
            android:layout_width="180dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="segnalazioniRicevute"
            app:cardCornerRadius="7dp"
            app:cardElevation="10dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/person_photo4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ring" />

                <TextView
                    android:id="@+id/person_name4"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="-5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/person_photo4"
                    android:text="Segnalazioni ricevute"
                    android:textAlignment="center"
                    android:textSize="16sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>


    <!-- <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@id/navigationView"
         android:onClick="ModificaCalendario" />-->
    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:foregroundGravity="center"
        android:layout_marginRight="10dp"
        android:layout_above="@id/navigationView"
        app:autoPlay="false"
        app:fillColor="@color/colorPrimary"
        app:pageColor="#FFFFFF"
        app:radius="4dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp">
        <!-- app:slideInterval="3000"-->
    </com.synnapps.carouselview.CarouselView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/bottom_navigation_colors_operatore_ecologico"
        app:itemTextColor="@drawable/bottom_navigation_colors_operatore_ecologico"
        app:menu="@menu/navigation_dipendente_comunale" />

</RelativeLayout>